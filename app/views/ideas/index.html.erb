<!-- Container for top bar -->
<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-10">
      <h1>Listing Ideas</h1>
    </div>
    <div class="col-sm-2">
        <%= link_to 'Post Idea', new_idea_path, :class => 'btn btn-primary'%>
    </div>
  </div>

  <!-- Show baskets -->

  <!-- End baskets -->

  <!-- Show tags -->
  <div class="center tags">
    <% Tag.all.each do |menutag| %>
      <label class="checkbox-inline"><input type="checkbox" value="">
      <%= menutag.text %>
      </label>
      <% if menutag == Tag.find(4)%>
        <br>
      <% end %>
    <% end %>
  </div>
  <!-- End tags -->
</div>
<!-- End top bar -->

<!-- Show every idea -->
<%= render 'layouts/list_ideas'%>
<!-- End show every idea -->
